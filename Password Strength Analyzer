import string
import getpass

def check_pwd():
    password = getpass.getpass("Enter your password: ")
    strength = 0
    remarks = ''
    lower_count = upper_count = num_count = whitespace_count = special_count = 0

    for char in list(password):
        if char in string.ascii_lowercase:
            lower_count += 1
        elif char in string.ascii_uppercase:
            upper_count += 1
        elif char in string.digits:
            num_count += 1
        elif char == ' ':
            whitespace_count += 1
        else:
            special_count += 1

    if lower_count > 1:
        strength += 1
    if upper_count > 1:
        strength += 1
    if num_count > 1:
        strength += 1
    if whitespace_count > 1:
        strength += 1
    if special_count > 1:
        strength += 1

    if strength == 1:
        remarks = 'Very Weak'
    elif strength == 2:
        remarks = 'Weak, consider changing it'
    elif strength == 3:
        remarks = 'Moderate, could be stronger'
    elif strength == 4:
        remarks = 'Strong password'
    elif strength == 5:
        remarks = 'Very Strong password'

    print('Your password has: ')
    print(f'Lowercase letters: {lower_count}')
    print(f'Uppercase letters: {upper_count}')
    print(f'Numbers: {num_count}')
    print(f'Whitespace characters: {whitespace_count}')
    print(f'Special characters: {special_count}')

    print(f'Password Strength: {strength}')
    print(f'Hints: {remarks}')

def ask_pwd(another_pwd=False):
    valid = False
    if another_pwd:
        choice=input("Do you want to enter another password? (y/n): ").lower()
    else:
        choice=input("Do you want to check your password? (y/n): ").lower()

    while not valid:
        if choice.lower() == 'y':
            return True
        elif choice.lower() == 'n':
            return False
        else:
            print("Invalid, try again.")

if __name__ == '__main__':
    print('+++ welcome to Password Strength Analyzer')
    ask_pw = ask_pwd()
    while ask_pw:  # <-- use the boolean, not the function
        check_pwd()
        ask_pw = ask_pwd(True)
    print("Goodbye!")
