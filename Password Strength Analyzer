import string
import getpass

def check_pwd():
    password = getpass.getpass("Enter your password: ")
    strenghth = 0
    remarks = ''
    lower_count = upper_count = num_count = wspace_count = special_count = 0

    for char in list(password):
        if char in string.ascii_lowercase:
            lower_count += 1
        elif char in string.ascii_uppercase:
            upper_count += 1
        elif char in string.digits:
            num_count += 1
        elif char == ' ':
            wspace_count += 1
        else:
            special_count += 1

    if lower_count > 1:
        strenghth += 1
    if upper_count > 1:
        strenghth += 1
    if num_count > 1:   
        strenghth += 1
    if wspace_count > 1:
        strenghth += 1
    if special_count > 1:
        strenghth += 1

    if strenghth == 1:
        remarks = 'Very Weak'
    elif strenghth == 2:
        remarks = 'Weak, consider changing it'
    elif strenghth == 3:
        remarks = 'Moderate, could be stronger'
    elif strenghth == 4:
        remarks = 'Strong password'
    elif strenghth == 5:
        remarks = 'Very Strong password'

    print('Your password has: ')
    print(f'Lowercase letters: {lower_count}')
    print(f'Uppercase letters: {upper_count}')
    print(f'Numbers: {num_count}')
    print(f'Whitespace characters: {wspace_count}')
    print(f'Special characters: {special_count}')

    print(f'Password Strength: {strenghth}')
    print(f'Hints: {remarks}')

    def ask_pwd (another_pwd=False):
        valid = False
        if another_pwd:
            choice = input("Do you want to enter another password? (y/n): ").lower()
        else:
            choice = input("Do you want to change your password? (y/n): ").lower()

            while not valid:
                if choice.lower() == 'y':
                    return True
                elif choice.lower() == 'n':
                    return False
                else:
                    print("Invalid, try again.")
